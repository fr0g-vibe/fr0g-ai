# =============================================================================
# fr0g.ai Configuration
# =============================================================================

# OpenWebUI Integration
OPENWEBUI_API_KEY=your-openwebui-api-key-here
OPENWEBUI_BASE_URL=http://openwebui:3000

# fr0g-ai-aip (Core AI Service) Configuration
FR0G_AIP_STORAGE_TYPE=file
FR0G_AIP_DATA_DIR=/app/data

# fr0g-ai-bridge (Integration Service) Configuration
FR0G_BRIDGE_HTTP_PORT=8080
FR0G_BRIDGE_GRPC_PORT=9090

# fr0g-ai-master-control (Cognitive Engine) Configuration
MCP_LEARNING_ENABLED=true
MCP_SYSTEM_CONSCIOUSNESS=true
MCP_EMERGENT_CAPABILITIES=true
MCP_MAX_CONCURRENT_WORKFLOWS=10
MCP_WEBHOOK_PORT=8081
MCP_WEBHOOK_HOST=0.0.0.0
MCP_HEALTH_CHECK_INTERVAL=30s
MCP_METRICS_INTERVAL=5m

# ESMTP Threat Vector Interceptor Configuration
ESMTP_ENABLED=true
ESMTP_PORT=2525
ESMTP_HOST=0.0.0.0
ESMTP_TLS_PORT=2465
ESMTP_HOSTNAME=fr0g-ai-interceptor.local
ESMTP_MAX_MESSAGE_SIZE=10485760
ESMTP_TIMEOUT=5m
ESMTP_ENABLE_TLS=false

# Discord Webhook Processor Configuration
DISCORD_ENABLED=true
DISCORD_COMMUNITY_TOPIC=general_discussion
DISCORD_PERSONA_COUNT=3
DISCORD_REVIEW_TIMEOUT=2m
DISCORD_REQUIRED_CONSENSUS=0.7

# AI Community Configuration
AI_COMMUNITY_MOCK_MODE=true
AI_COMMUNITY_RESPONSE_TIMEOUT=30s
AI_COMMUNITY_MAX_PERSONAS=5

# Cognitive Engine Configuration
COGNITIVE_PATTERN_RECOGNITION=true
COGNITIVE_INSIGHT_GENERATION=true
COGNITIVE_REFLECTION_ENABLED=true
COGNITIVE_AWARENESS_INTERVAL=30s
COGNITIVE_PATTERN_THRESHOLD=0.7
COGNITIVE_MAX_PATTERNS=1000
COGNITIVE_MAX_INSIGHTS=500
COGNITIVE_MAX_REFLECTIONS=100

# Memory Manager Configuration
MEMORY_SHORT_TERM_TTL=1h
MEMORY_LONG_TERM_TTL=168h
MEMORY_MAX_SHORT_TERM=1000
MEMORY_MAX_LONG_TERM=10000
MEMORY_MAX_EPISODIC=1000
MEMORY_MAX_SEMANTIC=5000
MEMORY_CLEANUP_INTERVAL=15m
MEMORY_COMPRESSION_ENABLED=true

# Learning Engine Configuration
LEARNING_RATE=0.01
LEARNING_ADAPTATION_SPEED=0.1
LEARNING_UPDATE_INTERVAL=5m

# Workflow Engine Configuration
WORKFLOW_MAX_CONCURRENT=10
WORKFLOW_TIMEOUT=30m
WORKFLOW_AUTO_OPTIMIZATION=true

# Security Configuration
WEBUI_SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development/Debug Settings
DEBUG_MODE=false
ENABLE_METRICS=true
ENABLE_TRACING=false

# Database Configuration (Future Use)
# DATABASE_URL=postgres://user:password@localhost:5432/fr0g_ai
# REDIS_URL=redis://localhost:6379

# External Service Timeouts (seconds)
HTTP_TIMEOUT=30
GRPC_TIMEOUT=10

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# =============================================================================
# Docker Compose Overrides
# =============================================================================
# Uncomment to override default Docker settings

# COMPOSE_PROJECT_NAME=fr0g-ai
# COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml
# fr0g.ai Environment Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
HTTP_PORT=8081
GRPC_PORT=9091
HOST=0.0.0.0

# OpenWebUI Integration
OPENWEBUI_BASE_URL=http://localhost:3000
OPENWEBUI_API_KEY=your_api_key_here
OPENWEBUI_TIMEOUT=30

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
ENABLE_CORS=true
RATE_LIMIT_RPM=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8082

# Development
DEBUG_MODE=false
ENABLE_REFLECTION=true
